<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lesson_intro_background"
    tools:context=".activity.lesson.LessonIntroActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewChapter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_chapter_intro"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutListView"
        app:layout_constraintEnd_toStartOf="@+id/textViewKanjiLevel"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKanjiLevel"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/latobold"
        android:text="@string/chapter1"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewChapterTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewChapter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/textViewChapterTitle"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/latobold"
        android:text="@string/chaptertitle1"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewChapter"
        app:layout_constraintTop_toBottomOf="@+id/textViewKanjiLevel" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutListView"
        android:layout_width="700dp"
        android:layout_height="900dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@color/colorWhitePureOpacity40"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChapterTitle">

        <TextView
            android:id="@+id/textViewIntroSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/latomedium"
            android:text="@string/lessonintrospeech"
            android:textSize="25sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ListView
            android:id="@+id/listView"
            android:layout_width="650dp"
            android:layout_height="800dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="10dp"
            android:divider="@null"
            android:dividerHeight="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textViewIntroSpeech"></ListView>

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/buttonLessonStart"
        android:layout_width="450dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="30sp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button_lesson_intro"
        android:elevation="10dp"
        android:fontFamily="@font/latomedium"
        android:text="@string/buttonLessonIntroStart"
        android:textAllCaps="false"
        android:textColor="@color/colorLessonStartButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>