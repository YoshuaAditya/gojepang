<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorKanjiIntroBackground"
    tools:context=".activity.kanji.KanjiIntroActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/circleImageViewChapter"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/ic_kanji_intro"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutListView"
        app:layout_constraintEnd_toStartOf="@+id/textViewKanjiLevel"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewKanjiLevel"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="100dp"
        android:fontFamily="@font/latobold"
        android:text="@string/kanjiintro"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/textViewChapterTitle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewChapter"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="spread_inside" />

    <TextView
        android:id="@+id/textViewChapterTitle"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="90dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/latobold"
        android:text="@string/chaptertitle1"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayoutListView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/circleImageViewChapter"
        app:layout_constraintTop_toBottomOf="@+id/textViewKanjiLevel" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayoutListView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:paddingBottom="20dp"
        android:background="@color/colorWhitePureOpacity40"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewChapterTitle">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.codesgood.views.JustifiedTextView
                android:id="@+id/textViewIntroSpeech"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:fontFamily="@font/latomedium"
                android:text="@string/lessonintrospeech"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </ScrollView>

    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/buttonLessonStart"
        android:layout_width="165dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/rounded_button_kanji_intro"
        android:elevation="10dp"
        android:fontFamily="@font/latomedium"
        android:textAllCaps="false"
        android:text="@string/buttonLessonIntroStart"
        android:textColor="@color/colorLessonStartButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>